    border-radius 50%
    width 36px
    height 36px
    font-weight bold
    font-size 20px
  }
}
.order-modal-element ,
.opt-modal-element {
  .card-footer-item {
    border 0
    border-radius 0
    padding-top 15px
    padding-bottom 15px
    height 42px
  }
}
.modal-order-special-offer-box {
  margin-top 15px
  font-weight bold
