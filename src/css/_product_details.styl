.product-details-box {
  h3 {
    margin-bottom 10px
  }
  .box {
    box-shadow none
  }
}
.product-order-details-box {
  padding 0 20px 20px 20px
  h4 {
    font-weight bold
    font-size 24px
  }
  .modal-order-amount-box button {
    width 28px
    height 28px
  }
  .columns:not(:last-child) {
    margin-bottom 0
  }
  p.link {
    text-decoration: underline;
  }
}
.extra-request-box {
  padding 20px
  .textarea {
    min-height 80px
  }
}
.button-submit-product-details-box {
  padding 0 20px 20px 20px
  button {
    width 100%
    margin-bottom 15px
  }
}
.product-order-details-wrapper {
  padding-bottom 20px
  border-bottom 1px solid #e5e5e5
}
.product-details-total-price-box {
  font-size 20px
  text-align right
  padding 0 20px 20px 20px
}
.your-orders-container {
  padding 20px
}
.order-details-para {
  font-size 18px
  strong {
    color inherit
  }
  span {
    font-size 14px
  }
}
.your-orders-extra-shot-price {
  display block
  margin-top 33px
  font-weight normal
}
.button-submit-your-orders-box {
  button {
    width 100%
  }
}